func greet(name) {
    print("Hello, ' + name + "!');
}

func add(x, y) {
    return x + y;
}

func factorial(n) {
    if (n <= 1) {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}

greet("World');

var sum = add(5, 3);
print("5 + 3 = ' + sum);

var fact = factorial(5);
print("5! = ' + fact);

func power(base, exp) {
    if (exp == 0) {
        return 1;
    } else {
        return base * power(base, exp - 1);
    }
}

var pow = power(2, 3);
print("2^3 = ' + pow);